{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Kinesis Firehose Delivery Stream for Sumo Logic integration",
  "Parameters": {
    "S3BucketName": {
      "Type": "String",
      "Description": "Name of the S3 bucket to integrate with Sumo Logic",
      "Default": "pgs-sumologic-log-bucket"
    }
  },
  "Resources": {
    "SumoLogicDeliveryStream": {
      "Type": "AWS::KinesisFirehose::DeliveryStream",
      "Properties": {
        "DeliveryStreamName": "sumologic-delivery-stream",
        "DeliveryStreamType": "DirectPut",
        "S3DestinationConfiguration": {
          "BucketARN": {
            "Fn::Join": [
              "",
              [
                "arn:aws:s3:::",
                { "Ref": "S3BucketName" }
              ]
            ]
          },
          "RoleARN": { "Fn::GetAtt": ["SumoLogicDeliveryRole", "Arn"] },
          "BufferingHints": {
            "IntervalInSeconds": 300,
            "SizeInMBs": 5
          }
        }
      }
    },
    "SumoLogicDeliveryRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "delivery.logs.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "SumoLogicDeliveryPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "kinesis:PutRecord",
                  "Resource": {
                    "Fn::GetAtt": ["SumoLogicDeliveryStream", "Arn"]
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": "iam:PassRole",
                  "Resource": {
                    "Fn::GetAtt": [
                      "SumoLogicCollectorRole",
                      "Arn"
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "SumoLogicDeliveryStreamARN": {
      "Value": {
        "Fn::GetAtt": ["SumoLogicDeliveryStream", "Arn"]
      },
      "Description": "ARN of the Kinesis Data Firehose Delivery Stream for Sumo Logic integration"
    }
  }
}
