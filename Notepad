{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Role that allows AssumeRole for multiple services.",
  "Parameters": {
    "AssumeRoleAction": {
      "Type": "String",
      "Description": "The IAM action to be allowed in the AssumeRolePolicy.",
      "Default": "sts:AssumeRole"
    },
    "AssumeRoleResource": {
      "Type": "String",
      "Description": "The IAM resource to which the AssumeRolePolicy applies.",
      "Default": "*"
    },
    "ConditionStringEquals": {
      "Type": "String",
      "Description": "The condition key-value pair for the AssumeRolePolicy.",
      "Default": "bucket-owner-full-control"
    }
  },
  "Resources": {
    "AutomationAssumeRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "cloudformation.amazonaws.com",
                  "elasticloadbalancing.amazonaws.com",
                  "cloudwatch.amazonaws.com",
                  "s3.amazonaws.com",
                  "ec2.amazonaws.com"
                ]
              },
              "Action": { "Ref": "AssumeRoleAction" }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "AutomationAssumeRolePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": { "Ref": "AssumeRoleAction" },
                  "Resource": { "Ref": "AssumeRoleResource" },
                  "Condition": {
                    "StringEquals": {
                      "s3:x-amz-acl": { "Ref": "ConditionStringEquals" }
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    }
  }
}
