description: Attach an existing security group to multiple EC2 instances
schemaVersion: '2.2'
mainSteps:
  - action: 'aws:runShellScript'
    name: 'attachSecurityGroup'
    inputs:
      runCommand:
        - 'aws ec2 modify-instance-attribute --instance-id i-1234567890abcdef0 --groups sg-0123456789abcdef0'
